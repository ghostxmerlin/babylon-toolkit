{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "simple-staking",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "application",
  "tags": ["type:service"],
  "targets": {
    "dev:watchDeps": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "services/simple-staking",
        "parallel": true,
        "commands": [
          {
            "command": "./scripts/watch-deps.sh {projectName}"
          },
          { "command": "npx vite" }
        ]
      }
    }
  }
}
